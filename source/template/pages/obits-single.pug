        .obits-bg
            .obits-form__title Leave your sympathy
            form.obits-wishes-form(id="obits-sympathy-form")
                input(type="text" name="name" placeholder="your name").sympathy__name-imput
                textarea(name="sympathy-text" placeholder="write your words here").sympathy__text
                button.sympathy__submit submit
    include ../common/footer