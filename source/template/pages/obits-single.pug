        img.popup_menu__burger-icon(src="assets/img/icons/burger_w.png" alt="menu icon")
    include ../common/pop-up_menu
    include ../common/header_common
    include ../common/menu
    .main-container
        .obits-title In loving memory of
        .obits-card
            .obits-card__left
                img.obits-card-img(src="assets/img/slide_m.jpg")
            .obits-card__right
                .obits-card__info
                    .obits-card__name   Firstname Lastname
                    .obits-card__dates  date
                    .obits-card__cemetery  Emanuel
                .obits-wishes
                    .obits-wishes__container
                        .obits-wishes__inner-container
                            .obits-wishes__name.obits-wishes__item   name
                            .obits-wishes__date.obits-wishes__item   00/00/0000
